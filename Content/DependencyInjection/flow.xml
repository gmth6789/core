<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Core\Content\Flow\FlowDefinition">
            <tag name="shopware.entity.definition" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\Aggregate\FlowSequence\FlowSequenceDefinition">
            <tag name="shopware.entity.definition" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\FlowDispatcher" decorates="event_dispatcher" decoration-priority="1000">
            <argument type="service" id="Shopware\Core\Content\Flow\FlowDispatcher.inner"/>
            <argument type="service" id="Shopware\Core\Content\Flow\FlowLoader"/>
            <argument type="service" id="logger"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>

            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\FlowExecutor" public="true">
            <argument type="service" id="event_dispatcher" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\AddOrderTagAction">
            <argument type="service" id="order.repository" />
            <tag name="kernel.event_subscriber" />
            <tag name="flow.action" priority="1000" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\AddCustomerTagAction">
            <argument type="service" id="customer.repository" />
            <tag name="kernel.event_subscriber" />
            <tag name="flow.action" priority="900" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\RemoveOrderTagAction">
            <argument type="service" id="order_tag.repository" />
            <tag name="kernel.event_subscriber" />
            <tag name="flow.action" priority="800" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\RemoveCustomerTagAction">
            <argument type="service" id="customer_tag.repository" />
            <tag name="kernel.event_subscriber" />
            <tag name="flow.action" priority="700" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\CallWebhookAction">
            <argument type="service" id="shopware.app_system.guzzle" />
            <argument type="service" id="Shopware\Core\Framework\Adapter\Twig\StringTemplateRenderer"/>
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber" />
            <tag name="flow.action" priority="650" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\SendMailAction">
            <argument type="service" id="Shopware\Core\Content\Mail\Service\MailService"/>
            <argument type="service" id="mail_template.repository"/>
            <argument type="service" id="Shopware\Core\Content\Media\MediaService"/>
            <argument type="service" id="media.repository"/>
            <argument type="service" id="document.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Document\DocumentService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="mail_template_type.repository"/>
            <argument type="service" id="Shopware\Core\Framework\Adapter\Translation\Translator"/>
            <argument type="service" id="language.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <tag name="kernel.event_subscriber"/>
            <tag name="flow.action" priority="500" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\GenerateDocumentAction">
            <argument type="service" id="Shopware\Core\Checkout\Document\DocumentService"/>
            <argument type="service" id="Shopware\Core\System\NumberRange\ValueGenerator\NumberRangeValueGeneratorInterface" />
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
            <tag name="flow.action" priority="620" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\SetOrderStateAction">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\SalesChannel\OrderService"/>
            <tag name="kernel.event_subscriber" />
            <tag name="flow.action" priority="400" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\StopFlowAction">
            <tag name="kernel.event_subscriber" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
            <tag name="flow.action" priority="1" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\FlowActionCollector">
            <argument type="tagged" tag="flow.action" />
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Shopware\Core\Content\Flow\FlowLoader">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\DataAbstractionLayer\FlowPayloadUpdater">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\DataAbstractionLayer\FlowIndexer">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Dbal\Common\IteratorFactory"/>
            <argument type="service" id="flow.repository"/>
            <argument type="service" id="Shopware\Core\Content\Flow\DataAbstractionLayer\FlowPayloadUpdater"/>
            <argument type="service" id="event_dispatcher"/>
            <tag name="shopware.entity_indexer"/>
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

    </services>
</container>
