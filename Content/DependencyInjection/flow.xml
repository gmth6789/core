<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Core\Content\Flow\FlowDefinition">
            <tag name="shopware.entity.definition" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\FlowSequence\FlowSequenceDefinition">
            <tag name="shopware.entity.definition" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\FlowDispatcher" decorates="event_dispatcher" decoration-priority="1000">
            <argument type="service" id="Shopware\Core\Content\Flow\FlowDispatcher.inner"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>

            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\FlowExecutor" public="true">
            <argument type="service" id="event_dispatcher" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\FlowCacheClearer">
            <argument type="service" id="Shopware\Core\Content\Flow\FlowDispatcher"/>
            <tag name="kernel.event_subscriber"/>
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\AddTagAction">
            <tag name="kernel.event_subscriber" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
            <tag name="flow.action" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\SetOrderStateAction">
            <tag name="kernel.event_subscriber" />
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
            <tag name="flow.action" />
        </service>

        <service id="Shopware\Core\Content\Flow\Action\FlowActionCollector">
            <argument type="tagged" tag="flow.action" />
            <argument type="service" id="event_dispatcher"/>
            <tag name="shopware.feature" flag="FEATURE_NEXT_8225" />
        </service>

    </services>
</container>
