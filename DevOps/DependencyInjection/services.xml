<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"/>

        <service id="Shopware\Core\DevOps\System\Command\SystemInstallCommand">
            <argument>%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>

        <service id="Shopware\Core\DevOps\System\Command\SystemGenerateJwtSecretCommand">
            <argument>%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>

        <service id="Shopware\Core\DevOps\System\Command\SystemConfigureShopCommand">
            <argument type="service" id="Shopware\Core\DevOps\System\Service\ShopConfigurator"/>
            <argument type="service" id="Shopware\Core\Framework\Adapter\Cache\CacheClearer"/>

            <tag name="console.command"/>
        </service>

        <service id="Shopware\Core\DevOps\System\Service\JwtCertificateGenerator"/>

        <service id="Shopware\Core\DevOps\System\Service\ShopConfigurator">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

    </services>
</container>
